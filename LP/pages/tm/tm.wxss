.team-join-container {
    background-color: #e1e8ee;
    width: 100%;
    height: 100%;
    position:absolute;
}

.team-join-item {
    border-width: 2rpx;
    background-color:#4dbce9;
    border-style: solid;
    border-color: white;
    margin:20rpx;
    flex-direction: row;
    display: flex;
    align-items: center;
}

.team-join-icon {
    border-radius: 50%;
    width:108rpx;
    height: 108rpx;
    margin:10rpx;
    border-width: 2rpx;
    border-style: solid;
    border-color: white;
}

.team-join-nickname {
    width:100%;
    color:white;
    text-align: center;
}

.team-join-player {
    width: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.team-join-reject {
  color:#86939e;
  background-color: white;
  width:200rpx;
  height:70rpx;
  margin:20rpx;
  font-size:30rpx;
}
.team-join-accept {
  color:#4dbce9;
  background-color: white;
  width:200rpx;
  height:70rpx;
  margin:20rpx;
  font-size:30rpx;
}
.team-join-item text {
  color:white;
  width:280rpx;
  font-size:30rpx;
}


