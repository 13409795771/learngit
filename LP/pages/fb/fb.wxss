/* fb.wxss */
.fb-container {
    background-color: white;
    width: 100%;
    height: 100%;
    position:absolute;
}
.fb-content {
  margin:20rpx;
  padding:20rpx;
  border-width: 2rpx;
  border-color:#e1e8ee;
  border-style: solid;
  font-size: 30rpx;
  height: 250rpx;
}
.fb-radio {
  font-size: 30rpx;
  margin:20rpx;
  padding:20rpx;
  border-width: 2rpx;
  border-color:#e1e8ee;
  border-style: solid;
}
.fb-radio text {
  color:black;
}
.fb-radio-item {
  height: 50prx;
  width: 40%;
  margin-top: 10rpx;
}
.fb-contact {
  margin:20rpx;
  padding:20rpx;
  border-width: 2rpx;
  border-color:#e1e8ee;
  border-style: solid;
  text-align: start;
  font-size: 30rpx;
  height: 100rpx;
}


